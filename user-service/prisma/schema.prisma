generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  BANKER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  username String?
  company  String?

  phone    String?
  birthday DateTime?

  signature String? @default("None")

  address String?
  role    Role    @default(CLIENT)

  @@map("users")
}
